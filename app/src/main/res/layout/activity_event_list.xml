<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topIsland"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/red"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Burger-Menü-Button -->

        <!-- Textfeld "Home" -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Events"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="#00FFFFFF"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_mapmode" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <Button
                android:id="@+id/buttonFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:clickable="true"
                android:text="Feed"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="All"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Close"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:elevation="-1dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@+id/topIsland"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/emptyStateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:text="Es konnten keine Events für dich gefunden werden, versuche die Suchreichweite zu erhöhen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEventList"
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomIslandHome"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="#4D4C4C"
        app:cardCornerRadius="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/eventListButton"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/selectBottomIsland"
                android:contentDescription="List"
                app:cardCornerRadius="70dp"
                app:srcCompat="@android:drawable/ic_dialog_dialer" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#FFFFFF" />

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:contentDescription="Home Button"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <View
                android:id="@+id/divider2"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#FFFFFF" />

            <ImageButton
                android:id="@+id/accountButton"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:contentDescription="Account"
                app:srcCompat="@drawable/person" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>